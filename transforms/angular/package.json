{
  "name": "karma-typescript-angular2-transform",
  "version": "4.0.0",
  "description": "Plugin for transforming template and style urls in Angular components.",
  "main": "dist/transform.js",
  "keywords": [
    "angular",
    "karma-typescript",
    "typescript"
  ],
  "author": "monounity",
  "contributors": [
    "erikbarke",
    "cleavera"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/monounity/karma-typescript.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc --rootDir ./src && npm pack",
    "lint": "tslint --project tsconfig.json",
    "test": "nyc --require ts-node/register tape src/test/*.spec.ts | faucet"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.spec.ts"
    ],
    "reporter": [
      "html"
    ],
    "tempDir": "./coverage/.nyc_output"
  },
  "dependencies": {
    "acorn": "^6.0.2",
    "log4js": "^3.0.6",
    "magic-string": "^0.25.1"
  },
  "devDependencies": {
    "@angular/core": "^7.0.2",
    "@types/karma": "^3.0.0",
    "@types/lodash": "^4.14.55",
    "@types/node": "^10.12.2",
    "@types/sinon": "^5.0.5",
    "@types/tape": "^4.2.29",
    "faucet": "0.0.1",
    "karma-typescript": "latest",
    "nyc": "^13.1.0",
    "rxjs": "^6.3.3",
    "sinon": "^7.1.1",
    "tape": "^4.6.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "latest",
    "zone.js": "^0.8.26"
  }
}
